     \tkzInit[xmax=5.0,ymax=5.0,xmin=-5.0 ,ymin=-5.0]
   \begin{scope}[dashed]
     \tkzGrid
   \end{scope}
   \tkzDrawX[label={$x$}]
   \tkzDrawY[label={$y$}]
   \tkzLabelX
   \tkzLabelY
   \tkzFct[line width=2pt,domain=-5:-0.1]{(1/x)}
   \tkzFct[line width=2pt,domain=0.1:5]{(1/x)}
   \tkzFct[line width=2pt,domain=-5:5]{x}
\end{tikzpicture}
